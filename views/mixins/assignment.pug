mixin assignment(title, due, submitted,assignmentid)
    .assignment.card.lg-row.mt-2
        .card-body.p-2
            p.card-title.mb-0.font-weight-bold= title
            p.card-text.mb-1 Due: #{due}
            .row.align-items-center
                a.assignmentInfo.btn.white-btn.ml-3.mr-2.py-0.px-1.font-weight-bold(href= '/assignments/'+ assignmentid) View More
                if submitted
                    i.far.fa-check-circle
                else
                    i.far.fa-times-circle 